        <ListBox x:Name="peopleListBox" HorizontalAlignment="Left" Height="400" Margin="10.4,10,0,0" VerticalAlignment="Top" Width="372" Grid.Column="1" SelectionChanged="peopleListBox_SelectionChanged"/>

    </Grid>
